<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Layout principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Recipe main picture -->
            <ImageView
                android:id="@+id/recipe_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="10dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:layout_weight="0.5">

                <!-- Recipe title -->
                <TextView
                    android:id="@+id/recipe_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    style="@style/LargeTitle"/>

                <!-- Preparation time -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SmallTitle"
                    android:text="Temps de préparation : "/>

                <TextView
                    android:id="@+id/recipe_prep_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="italic"/>

                <!-- Source URL for recipe -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SmallTitle"
                    android:text="Lien original : "/>

                <TextView
                    android:id="@+id/recipe_source_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:autoLink="web"
                    style="@style/Link"/>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <!-- Recipe ingredients list -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/SmallTitle"
            android:text="Liste des ingrédients : "/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recipe_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Vegan image -->
            <ImageView
                android:id="@+id/recipe_vegan_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vegan"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"/>

            <!-- Vegetarian image -->
            <ImageView
                android:id="@+id/recipe_vegetarian_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vegetarian"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"/>

        </LinearLayout>

        <!-- Recipe instructions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SmallTitle"
            android:layout_marginTop="16dp"
            android:text="Instructions : "/>

        <TextView
            android:id="@+id/recipe_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- Recipe description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SmallTitle"
            android:layout_marginTop="16dp"
            android:text="Description : "/>

        <TextView
            android:id="@+id/recipe_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- Similar recipe list -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SmallTitle"
            android:layout_marginTop="16dp"
            android:text="Recettes similaires : "/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recipe_similar_recipes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/no_similar_recipes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:text="Pas de recettes similaires"/>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>